# Server Configuration
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8080

# Database Configuration
DATABASE_PATH=./database/database.sqlite
DATABASE_BACKUP_PATH=./database/backups

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Ethereum/MetaMask Configuration
ETHEREUM_NETWORK=localhost
ETHEREUM_RPC_URL=http://127.0.0.1:8545
CONTRACT_ADDRESS=0x...
CONTRACT_OWNER_PRIVATE_KEY=0x...

# Network RPC URLs (for different networks)
MAINNET_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your-api-key
GOERLI_RPC_URL=https://eth-goerli.alchemyapi.io/v2/your-api-key
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key
POLYGON_RPC_URL=https://polygon-rpc.com
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
BSC_RPC_URL=https://bsc-dataseed1.binance.org
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545

# Private Keys (for deployment)
PRIVATE_KEY=0x...
DEPLOYER_PRIVATE_KEY=0x...

# API Keys for verification
ETHERSCAN_API_KEY=your-etherscan-api-key
POLYGONSCAN_API_KEY=your-polygonscan-api-key
BSCSCAN_API_KEY=your-bscscan-api-key
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security
CORS_ORIGIN=http://localhost:8080,http://localhost:3000
TRUST_PROXY=false
SECURE_COOKIES=false

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourwidget.com

# Admin Configuration
ADMIN_EMAIL=admin@yourwidget.com
ADMIN_PASSWORD=change-this-password
ADMIN_WALLET_ADDRESS=0x...

# Widget Configuration
WIDGET_DEFAULT_THEME=light
WIDGET_MAX_REQUESTS_PER_KEY=1000
WIDGET_DEFAULT_RATE_LIMIT=60

# Credit System
DEFAULT_CREDIT_PACKAGES=100,500,1000,5000
CREDIT_PRICES_USD=10,45,80,350
COMMISSION_RATE=2
MIN_PURCHASE_AMOUNT=0.001
MAX_PURCHASE_AMOUNT=10

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# File Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
UPLOAD_PATH=./uploads

# Backup Configuration
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
METRICS_PORT=9090

# Development
DEBUG=widget-saas:*
VERBOSE_LOGGING=false
ENABLE_SWAGGER=true
SWAGGER_PATH=/api-docs

# Production Settings
# Uncomment and configure for production
# HTTPS_ENABLED=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# REDIS_URL=redis://localhost:6379
# SESSION_SECRET=your-session-secret
# SENTRY_DSN=https://your-sentry-dsn